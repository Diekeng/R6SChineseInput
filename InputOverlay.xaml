<Window x:Class="MouseHookApp.InputOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        Width="480" Height="64"
        ResizeMode="NoResize"
        FocusManager.FocusedElement="{Binding ElementName=InputBox}">

    <!-- 半透明黑色背景容器 -->
    <Border Background="#CC000000" CornerRadius="12" Padding="16,8"
            VerticalAlignment="Center" HorizontalAlignment="Stretch"
            Margin="8">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" Opacity="0.6" ShadowDepth="2"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 提示图标 -->
            <TextBlock Grid.Column="0" Text="⌨️"
                       FontSize="18" Foreground="White"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>

            <!-- 输入框 -->
            <TextBox x:Name="InputBox" Grid.Column="1"
                     FontSize="16"
                     Foreground="White"
                     CaretBrush="White"
                     Background="Transparent"
                     BorderThickness="0"
                     VerticalAlignment="Center"
                     PreviewKeyDown="InputBox_PreviewKeyDown"/>
        </Grid>
    </Border>
</Window>
